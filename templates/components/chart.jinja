{% macro chart(label, id) %}
<div class="box has-text-centered">
    <h3 class="subtitle is-3">{{ label }}</h3>
    <div class="block">
        <progress class="progress" id="{{ id }}-loading"></progress>
    </div>
    <div class="chart-container" hidden>
        <canvas height="500" id="{{ id }}" width="750"></canvas>
    </div>
</div>
{% endmacro %}
