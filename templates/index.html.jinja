{% from "components/chart.jinja" import chart %}
<!DOCTYPE html>
<html lang="en-GB">
<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1" name="viewport">
  <title>Weatherdan</title>
  <link href="https://use.fontawesome.com/releases/v6.3.0/css/all.css" rel="stylesheet">
  <link href="https://cdn.rawgit.com/jenil/bulmaswatch/gh-pages/darkly/bulmaswatch.min.css" rel="stylesheet">
  <link href="/static/css/styles.css" rel="stylesheet">
  <link href="/static/img/favicon.ico" id="favicon" rel="icon" type="image/x-icon">
</head>
<body class="has-navbar-fixed-top">
{% include "components/navbar.jinja" %}
<main class="section">
  <div class="container">
    <header class="block has-text-centered">
      <figure class="image is-128x128 is-inline-block">
        <img class="profile" loading="lazy" src="/static/img/logo.png" alt="Weatherdan Logo"/>
      </figure>
      <h1 class="title is-1">Weatherdan</h1>
    </header>
    <section class="section">
      <div class="columns is-centered is-multiline">
        <div class="column is-full">
          {{ chart(label="Pressure Stats", id="pressure-stats") }}
        </div>
        <div class="column is-full">
          {{ chart(label="Rainfall Stats", id="rainfall-stats") }}
        </div>
        <div class="column is-full">
          {{ chart(label="Solar Stats", id="solar-stats") }}
        </div>
        <div class="column is-full">
          {{ chart(label="UV Index Stats", id="uv-index-stats") }}
        </div>
        <div class="column is-full">
          {{ chart(label="Wind Stats", id="wind-stats") }}
        </div>
      </div>
    </section>
  </div>
</main>
{% include "components/footer.jinja" %}
<script src="https://cdn.jsdelivr.net/npm/jquery@^3.6" type="text/javascript"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js@^4.2" type="text/javascript"></script>
<script src="https://cdn.jsdelivr.net/npm/moment@^2.29" type="text/javascript"></script>
<script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-moment@^1.0" type="text/javascript"></script>
<script src="/static/js/bulma-navbar.js" type="text/javascript"></script>
<script src="/static/js/scripts.js" type="text/javascript"></script>
<script src="/static/js/pressure.js" type="text/javascript"></script>
<script src="/static/js/rainfall.js" type="text/javascript"></script>
<script src="/static/js/solar.js" type="text/javascript"></script>
<script src="/static/js/uv-index.js" type="text/javascript"></script>
<script src="/static/js/wind.js" type="text/javascript"></script>
<script type="text/javascript">
  ready(function() {
    loadPressureStats("Daily", "pressure-stats", 7);
    loadRainfallStats("Daily", "rainfall-stats", 7);
    loadSolarStats("Daily", "solar-stats", 7);
    loadUVIndexStats("Daily", "uv-index-stats", 7);
    loadWindStats("Daily", "wind-stats", 7);
  });
  ready(function() {
    let caller = "loading";

    addLoading(caller);
    fetch("/api/pressure", {
      method: "PUT",
      headers: headers,
    }).then((response) => {
      if (!response.ok)
        return Promise.reject(response);
    }).then(() => {
      fetch("/api/rainfall", {
        method: "PUT",
        headers: headers,
      })
    }).then((response) => {
      if (!response.ok)
        return Promise.reject(response);
    }).then(() => {
      fetch("/api/solar", {
        method: "PUT",
        headers: headers,
      })
    }).then((response) => {
      if (!response.ok)
        return Promise.reject(response);
    }).then(() => {
      fetch("/api/uv-index", {
        method: "PUT",
        headers: headers,
      })
    }).then((response) => {
      if (!response.ok)
        return Promise.reject(response);
    }).then(() => {
      fetch("/api/wind", {
        method: "PUT",
        headers: headers,
      })
    }).then((response) => {
      if (!response.ok)
        return Promise.reject(response);
    }).catch((response) => response.json().then((msg) => {
      if (response.status != 508)
        alert(`${response.status} ${response.statusText} => ${msg.details}`);
    })).finally(() => removeLoading(caller));
  });
</script>
</body>
</html>
